{
  "scripts": {
    "security:encrypt-data": "tsx scripts/encrypt-existing-data.ts",
    "security:generate-key": "tsx scripts/generate-encryption-key.ts",
    "security:validate-encryption": "tsx -e \"import('./scripts/encrypt-existing-data.ts').then(m => m.validateEncryption()).then(console.log)\"",
    "compliance:audit-report": "tsx -e \"import('./server/services/auditService.ts').then(m => m.auditService.generateAuditReport(new Date(Date.now() - 30*24*60*60*1000), new Date())).then(console.log)\"",
    "compliance:validate": "tsx scripts/validate-compliance.ts",
    "compliance:full-check": "npm run db:push && npm run compliance:validate",
    "db:encrypt-setup": "npm run db:push && npm run security:encrypt-data"
  }
}