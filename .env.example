# CyberDocGen Environment Configuration
# Copy this to .env and fill in the values for your environment

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cyberdocgen

# Session Management
SESSION_SECRET=your-secure-session-secret-minimum-32-characters-long

# Encryption Configuration (REQUIRED for SOC 2 compliance)
# Generate with: npm run security:generate-key
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Application Configuration
NODE_ENV=development
PORT=5000

# Security Configuration
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# Logging Configuration
LOG_LEVEL=info
